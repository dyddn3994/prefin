<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorBackground"
    android:padding="16dp"
    tools:context=".ui.signUp.SignUpFragment"
    >

    <ImageView
        android:id="@+id/fragment_sign_up_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/fragment_sign_up_textView"
        style="@style/Title.Bold.Size32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_back_button" />

    <TextView
        android:layout_marginTop="32dp"
        android:id="@+id/fragment_sign_up_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/maplestory_light"
        android:text="아이디"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_textView" />

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/fragment_sign_up_id_edit_text"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력해주세요"
        android:inputType="text"
        android:background="@drawable/edittext_rectangle_24"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_id_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_id_text_view"
        />

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/fragment_sign_up_email_check_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잘못된 이메일 형식 입니다."
        android:textColor="@color/colorRed"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_id_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_id_edit_text"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/fragment_sign_up_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/maplestory_light"
        android:text="이름"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_id_edit_text" />

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/fragment_sign_up_name_edit_text"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름을 입력해주세요"
        android:inputType="text"
        android:background="@drawable/edittext_rectangle_24"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_name_text_view"
        />

    <TextView
        android:id="@+id/fragment_sign_up_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/maplestory_light"
        android:text="비밀번호"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_name_edit_text" />

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/fragment_sign_up_password_edit_text"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rectangle_24"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_password_text_view"
        />
    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/fragment_sign_up_password_confirm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다. 다시 입력해주세요"
        android:textColor="@color/colorRed"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_password_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_edit_text"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/fragment_sign_up_password_check_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/maplestory_light"
        android:text="비밀번호 확인"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_edit_text" />

    <EditText
        android:layout_marginTop="8dp"
        android:id="@+id/fragment_sign_up_password_check_edit_text"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rectangle_24"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_check_text_view"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_password_check_text_view"
        />

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/fragment_sign_up_password_check_confirm_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 일치하지 않습니다. 다시 입력해주세요"
        android:textColor="@color/colorRed"
        app:layout_constraintStart_toStartOf="@+id/fragment_sign_up_password_check_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_check_edit_text"
        android:visibility="gone"
        />

    <android.widget.Button
        android:layout_marginTop="32dp"
        android:id="@+id/fragment_sign_up_register_button"
        style="@style/Text.regular.Size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_81"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="회원가입"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_sign_up_password_check_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>