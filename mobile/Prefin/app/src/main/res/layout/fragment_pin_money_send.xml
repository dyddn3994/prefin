<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.account.PinMoneySendFragment">

    <TextView
        android:id="@+id/fragment_pin_money_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="얼마를 주시겠어요?"
        style="@style/Text.regular.Size32"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/fragment_pin_money_money_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보낼 용돈 입력"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/edittext_rectangle_24"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pin_money_title_text_view"
        />

    <android.widget.Button
        android:id="@+id/fragment_pin_money_send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전송"
        style="@style/Text.regular.Size20"
        android:background="@drawable/button_rectangle_81"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>