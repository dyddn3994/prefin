<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.accountConnecting.AccountInputChildFragment">

    <TextView
        android:id="@+id/fragment_account_input_child_text_view"
        style="@style/Text.regular.Size32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="사용할 자녀 계좌를 \n입력해주세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_account_input_child_card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:strokeWidth="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_input_child_text_view"
        >

        <EditText
            android:id="@+id/fragment_account_input_child_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="계좌번호 입력"
            android:background="@drawable/edittext_rectangle_24"
            android:paddingStart="12dp"
            />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="8dp"
        android:id="@+id/fragment_account_input_child_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_81"
        android:fontFamily="@font/maplestory_light"
        android:text="인증 번호 전송"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_input_child_card_view" />

    <TextView
        android:id="@+id/fragment_account_input_child_check_text_view"
        style="@style/Text.regular.Size32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:text="인증 번호 입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_input_child_check_button"  />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_account_input_child_check_card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:strokeWidth="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_input_child_check_text_view"
        >

        <EditText
            android:id="@+id/fragment_account_input_child_check_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="인증번호 입력"
            android:background="@drawable/edittext_rectangle_24"
            android:paddingStart="12dp"
            />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/fragment_account_input_child_check_card_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_input_child_check_card_view"
        android:gravity="end"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 시간"

            android:textColor="@color/colorRed"
            />

        <TextView
            android:id="@+id/fragment_account_input_timer_text_view"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 : 00"
            android:textColor="@color/colorRed"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_account_input_child_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_81"
        android:fontFamily="@font/maplestory_light"
        android:text="설정"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>