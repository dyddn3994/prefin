<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context=".ui.accountConnecting.ChildJoinFragment">

    <TextView
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        android:id="@+id/fragment_child_join_title_text_view"
        style="@style/Text.regular.Size32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자녀 계정 등록"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_child_join_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        style="@style/Text.regular.Size20"
        app:layout_constraintStart_toStartOf="@+id/fragment_child_join_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_title_text_view" />

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_child_join_id_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:strokeWidth="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_id_text_view"
        >

        <EditText
            android:id="@+id/fragment__child_join_id_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"

            android:background="@drawable/edittext_rectangle_24"
            android:paddingStart="12dp"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_child_join_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        style="@style/Text.regular.Size20"
        app:layout_constraintStart_toStartOf="@+id/fragment_child_join_id_card_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_id_card_view" />

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_child_join_password_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:strokeWidth="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_password_text_view"
        >

        <EditText
            android:id="@+id/fragment__child_join_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:background="@drawable/edittext_rectangle_24"
            android:paddingStart="12dp"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_child_join_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 "
        style="@style/Text.regular.Size20"
        app:layout_constraintStart_toStartOf="@+id/fragment_child_join_password_card_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_password_card_view" />

    <com.google.android.material.card.MaterialCardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_child_join_name_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:strokeWidth="0dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_child_join_name_text_view"
        >

        <EditText
            android:id="@+id/fragment__child_join_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름 입력"
            android:inputType="textPassword"
            android:background="@drawable/edittext_rectangle_24"
            android:paddingStart="12dp"
            />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_account_input_child_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rectangle_81"
        android:fontFamily="@font/maplestory_light"
        android:text="등록"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>