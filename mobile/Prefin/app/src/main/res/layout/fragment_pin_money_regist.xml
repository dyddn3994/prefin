<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.account.PinMoneyRegistFragment">

    <ImageView
        android:id="@+id/fragment_pin_money_regist_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/fragment_pin_money_regist_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정기 용돈 등록"
        style="@style/Text.regular.Size32"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/fragment_pin_money_regist_date_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        style="@style/Text.regular.Size20"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/fragment_pin_money_regist_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pin_money_regist_title_text_view"
        />

    <TextView
        android:id="@+id/fragment_pin_money_regist_date_prefix_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매월"
        style="@style/Text.regular.Size20"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="@+id/fragment_pin_money_regist_date_suffix_text_view"
        app:layout_constraintEnd_toStartOf="@+id/fragment_pin_money_regist_date_edit_text"
        />

    <EditText
        android:id="@+id/fragment_pin_money_regist_date_edit_text"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rectangle_24"
        android:layout_marginEnd="4dp"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintTop_toTopOf="@+id/fragment_pin_money_regist_date_suffix_text_view"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_pin_money_regist_date_suffix_text_view"
        app:layout_constraintEnd_toStartOf="@+id/fragment_pin_money_regist_date_suffix_text_view"
        />

    <TextView
        android:id="@+id/fragment_pin_money_regist_date_suffix_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        style="@style/Text.regular.Size20"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pin_money_regist_date_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/fragment_pin_money_regist_amount_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="금액"
        style="@style/Text.regular.Size20"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/fragment_pin_money_regist_date_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pin_money_regist_date_suffix_text_view"
        />

    <EditText
        android:id="@+id/fragment_pin_money_regist_amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="금액 입력"
        android:paddingStart="12dp"
        android:inputType="number"
        android:background="@drawable/edittext_rectangle_24"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fragment_pin_money_regist_amount_title_text_view"
        />

    <android.widget.Button
        android:id="@+id/fragment_pin_money_regist_regist_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등록"
        style="@style/Text.regular.Size20"
        android:textColor="@color/white"
        android:background="@drawable/button_rectangle_81"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>