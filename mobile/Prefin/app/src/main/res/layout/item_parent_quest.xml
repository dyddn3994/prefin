<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_border_radius"
    android:paddingVertical="16dp"
    android:paddingHorizontal="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/item_parent_quest_time_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_orange_clock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/item_parent_quest_quest_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="설거지"
        style="@style/Text.regular.Size20"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/item_parent_quest_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Today, 14:56"
        style="@style/Text.regular.Size16"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/item_parent_quest_quest_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/item_parent_quest_quest_name_text_view"
        />

    <TextView
        android:id="@+id/item_parent_quest_amount_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1,000 원"
        style="@style/Text.regular.Size20"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>