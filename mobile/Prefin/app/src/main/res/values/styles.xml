<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <!-- Bold -->
    <style name="Title.Bold.Size32" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/maplestory_bold</item>
    </style>


    <!-- light -->
    <style name="Text.regular.Size12" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/maplestory_light</item>
    </style>

    <style name="Text.regular.Size16" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/maplestory_light</item>
    </style>

    <style name="Text.regular.Size20" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/maplestory_light</item>
    </style>

    <style name="Text.regular.Size32" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/maplestory_light</item>
    </style>

    <!-- BottomSheetDialog -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_top_border_radius</item>
    </style>

    <!-- TextInputLayout -->
    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorIconDrawable">@null</item>
    </style>
    <style name="PasswordTextInputLayout" parent="DefaultTextInputLayout">
        <item name="passwordToggleEnabled">true</item>
    </style>
    <style name="DropDownTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorIconDrawable">@null</item>
    </style>
</resources>